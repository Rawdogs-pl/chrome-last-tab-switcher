{
  "manifest_version": 3,
  "name": "Last Tab Switcher",
  "description": "Przełączaj się między ostatnio używanymi kartami.",
  "version": "1.1",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "switch-last-tab": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Przełącz na ostatnio aktywną kartę"
    },
    "sync-scroll-position": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Zescrolluj do pozycji z ostatniej karty"
    }
  },
  "action": {
    "default_title": "Last Tab Switcher"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
